<h1>Listing Events</h1>

<h3>Search Events by Tag</h3>
  <div>
    <% tag_cloud Event.tag_counts, %w{smallest-tag small-tag medium-tag large-tag} do |tag, size_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: size_class %>
    <% end %>
  </div>

  <%= render partial: 'search_events.html.erb' %>

<section class="search-results">
  <header>
    <h1 class="h3">Results</h1>
  </header>
  <ol class="list-group">
    <% @events.each do |event| %>
      <li class="list-group-item">
        <h2><%= event.title %></h2>
        <h3><%= event.created_at %></h3>
        <h4><%= event.owner %></h4>
        <h4><%= event.owner_email %></h4>
      </li>
    <% end %>
  </ol>
</section>



<br>

<%= link_to 'New Event', new_event_path %>
